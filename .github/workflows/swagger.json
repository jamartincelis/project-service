        "/user/{userID}/projects/": {
            "get": {
                "operationId": "get_projects_by_user",
                "description": "",
                "parameters": [
                    {
                        "in": "path",
                        "name": "userID",
                        "schema": {
                            "type": "string"
                        },
                        "required": true,
                        "description": "UUID of the user"
                    }
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {}
                                }
                            }
                        },
                        "description": "Get projects by userID"
                    }
                },
                "tags": [
                    "projects"
                ]
            },
            "post": {
                "summary": "Post a message to Slack",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Project"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                },
                "tags": [
                    "projects"
                ]
            }
        }
