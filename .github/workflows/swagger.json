    "components": {
        "schemas": {
            "Project": {
                "title": "User project",
                "type": "object",
                "properties": {
                    "user": {
                        "type": "string",
                        "description": "user id"
                    },
                    "category": {
                        "type": "string",
                        "description": "Project category"
                    },
                    "name": {
                        "type": "string",
                        "description": "Project name"
                    },
                    "goal_date": {
                        "type": "string",
                        "description": "Project goal date"
                    },
                    "total": {
                        "type": "number",
                        "description": "Project total amount"
                    },
                    "from_account": {
                        "type": "string",
                        "description": "User account"
                    },
                    "to_account": {
                        "type": "string",
                        "description": "User account"
                    }
                },
                "required": [
                    "user",
                    "category",
                    "name",
                    "goal_date",
                    "total"
                ]
            }
        }
    }
}
