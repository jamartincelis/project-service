        {
            "url": "https://widgets.getxerpa.com/project-service/"
        }
    ],
    "paths": {
        "/monitoring/health-check/": {
            "get": {
                "operationId": "health_check",
                "description": "",
                "parameters": [],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {}
                                }
                            }
                        },
                        "description": "Health check endpoint"
                    }
                },
                "tags": [
                    "monitoring"
                ]
            }
